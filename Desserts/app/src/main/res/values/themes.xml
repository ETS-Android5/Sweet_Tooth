<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Desserts" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dim_white</item>
        <item name="colorPrimaryVariant">@color/light_creme</item>
        <item name="colorOnPrimary">@color/burgundy</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pale_cherry</item>
        <item name="colorSecondaryVariant">@color/cherry</item>
        <item name="colorOnSecondary">@color/light_creme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="actionMenuTextColor">@color/burgundy</item>
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="android:editTextColor">@color/burgundy</item>
        <item name="android:textColorHighlight">@color/pale_cherry</item>

<!--        <item name="android:tint">@color/pale_burgundy</item>-->
        <item name="iconTint">@color/pale_burgundy</item>

        <item name="android:queryBackground">@color/pale_cherry</item>
    </style>

    <style name="Theme.Desserts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Desserts.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:tint">@color/pale_burgundy</item>
        <item name="android:textColorHint">@color/pale_cherry</item>
        <item name="android:textColorHighlight">@color/light_grey</item>
        <item name="colorControlNormal">@color/pale_burgundy</item>
        <item name="android:queryBackground">@color/pale_cherry</item>
    </style>

    <style name="Theme.Desserts.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:textColorHint">@color/pale_cherry</item>
        <item name="android:textColorHighlight">@color/light_grey</item>
        <item name="android:queryBackground">@color/pale_cherry</item>
    </style>
</resources>